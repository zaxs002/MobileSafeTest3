<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.wz.mobilesafetest2.activity.Setup1Activity">

    <TextView android:text="2.手机卡的绑定"
        android:background="#30a4ce"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:padding="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="通过绑定手机卡:"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:textColor="#bb000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:text="下次重启手机,如果sim卡不一致,就会给安全号码发送报警短信"
        android:textColor="#bb000000"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.wz.mobilesafetest2.view.WaterMelonButton
            android:text="点击绑定/解绑SIM卡"
            android:id="@+id/bt_setup2_bind"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <ImageView android:id="@+id/iv_setup2_bind"
            android:layout_alignParentRight="true"
            android:layout_margin="11dp"
            android:src="@drawable/unlock"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView android:src="@drawable/step_2"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">

            <View android:background="@android:drawable/presence_invisible"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <View android:background="@android:drawable/presence_online"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <View android:background="@android:drawable/presence_invisible"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <View android:background="@android:drawable/presence_invisible"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <View android:background="@android:drawable/presence_invisible"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </LinearLayout>

        <com.wz.mobilesafetest2.view.WaterMelonButton android:onClick="next"
            android:text="下一步"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
        <com.wz.mobilesafetest2.view.WaterMelonButton android:onClick="prev"
            android:text="上一步"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
    </RelativeLayout>

</LinearLayout>
