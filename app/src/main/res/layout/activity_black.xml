<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.wz.mobilesafetest2.activity.BlackActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:background="@drawable/blue_bkg"
        android:layout_height="0dp">

        <TextView android:text="通讯卫士"
            android:textSize="22sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button android:id="@+id/bt_black_add"
            android:layout_alignParentRight="true"
            android:background="@drawable/bt_black_add_selector"
            android:layout_marginRight="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="9"
        android:orientation="vertical"
        android:layout_height="0dp">

        <ListView
            android:id="@+id/lv_black_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_black_empty"
            android:src="@drawable/empty"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ProgressBar android:id="@+id/pb_black_loading"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
