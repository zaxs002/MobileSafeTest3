<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.wz.mobilesafetest2.activity.Setup1Activity">

    <TextView android:text="1.欢迎使用手机防盗"
        android:background="#30a4ce"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:padding="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="您的手机防盗卫士:"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/dialog_title_default_icon"
        android:text="SIM卡变更报警"
        android:layout_marginTop="5dp"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/dialog_title_default_icon"
        android:text="GPS追踪"
        android:layout_marginTop="5dp"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/dialog_title_default_icon"
        android:text="远程锁屏"
        android:layout_marginTop="5dp"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/dialog_title_default_icon"
        android:text="远程销毁数据"
        android:layout_marginTop="5dp"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView android:src="@drawable/step_1"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">

            <View android:background="@android:drawable/presence_online"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <View android:background="@android:drawable/presence_invisible"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <View android:background="@android:drawable/presence_invisible"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <View android:background="@android:drawable/presence_invisible"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <View android:background="@android:drawable/presence_invisible"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </LinearLayout>

        <com.wz.mobilesafetest2.view.WaterMelonButton android:onClick="next"
            android:text="下一步"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
    </RelativeLayout>

</LinearLayout>
